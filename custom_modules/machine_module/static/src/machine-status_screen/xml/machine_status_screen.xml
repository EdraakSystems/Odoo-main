<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="machine_module.Machines" owl="1">
<!--        BOOTSTRAP ACCORDIAN-->
        <div style="margin:3%;">
            <h1>Internal Machine status</h1>
            <div class="accordion-item" t-foreach="state.machineList" t-as="machines" t-key="machines.id" style="width: 50%;">
                <h2 class="accordion-header" id="heading-{{ machines.id }}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" t-att-data-bs-target="'#collapse-' + machines.id" aria-expanded="false" aria-controls="collapseOne">
                        <h3><span t-esc="machines.machineName"/></h3>
                    </button>
                </h2>
                <div t-att-id="'collapse-' + machines.id" class="accordion-collapse collapse" aria-labelledby="heading-{{ machines.id }}" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <h5>Machine Name: <span t-esc="machines.machineName"/></h5>
                        <h5>Machine ID : <span t-esc="machines.id"/></h5>
                        <h5>PP Lot Number: <span t-esc="machines.ppLotNum"/></h5>
                        <div class="container">
                          <div class="row">
                            <div class="col-md-4">
                              <h3 class="text-center" style="margin-top:15%">Queue</h3>
                                <table class="table">
                                    <tbody>
                                      <t>
                                        <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span>0000</span>
                                            </td>
                                        </tr>
                                          <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span>0000</span>
                                            </td>
                                        </tr>
                                          <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span>0000</span>
                                            </td>
                                        </tr>
                                      </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-4">
                              <h3 class="text-center" style="margin-top:15%">Current</h3>
                                <table class="table">
                                    <tbody>
                                      <t>
                                        <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span class="text-center">0000</span>
                                            </td>
                                        </tr>
                                          <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span class="text-center">0000</span>
                                            </td>
                                        </tr>
                                          <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span class="text-center">0000</span>
                                            </td>
                                        </tr>
                                      </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-4">
                              <h3 class="text-center" style="margin-top:15%">Pending</h3>
                                <table class="table">
                                    <tbody>
                                      <t>
                                        <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span class="text-center">0000</span>
                                            </td>
                                        </tr>
                                          <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span class="text-center">0000</span>
                                            </td>
                                        </tr>
                                          <tr>
                                            <td scope="row" style="border: 0.1px solid #0000006e;">
                                                <span class="text-center">0000</span>
                                            </td>
                                        </tr>
                                      </t>
                                    </tbody>
                                </table>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>


